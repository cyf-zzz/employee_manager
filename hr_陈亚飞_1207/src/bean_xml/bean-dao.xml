<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd"
>

    <bean class="cyf.dao.impl.AdminDaoImpl" name="adminDao">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>

    <bean class="cyf.dao.impl.EmployeeDaoImpl" name="employeeDao">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>

    <bean class="cyf.dao.impl.DepartmentDaoImpl" name="departmentDao">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>

    <bean class="cyf.dao.impl.SalaryDaoImpl" name="salaryDao">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>
</beans>